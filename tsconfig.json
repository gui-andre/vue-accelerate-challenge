{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
			"jest",
			"@testing-library/jest-dom"
    ],
    "paths": {
      "@/*": ["src/*"],
			"@/components": ["src/components/*"],
      "@/router": ["src/router/*"],
      "@/services": ["src/services/*"],
      "@/store": ["src/store/*"],
      "@/types": ["src/types/*"],
      "@/views": ["src/views/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
		"jest.setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
